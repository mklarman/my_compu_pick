<!DOCTYPE html>
<html>
  <head>
    <title>mylottopix.com</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <div id='header'>

    <div id='header_words'>GET THE LOTTERY'S NUMBER USING MYLOTTOPIX.COM</div>


</div>

  <div id='navbar'>

    <% if !current_user %>
    <div>
      <%= link_to "Sign Up", new_user_registration_path, class: 'link_tabs' %>
      <%= link_to "Sign In", new_user_session_path, class: 'link_tabs'  %>
    </div>
    <%  elsif current_user && current_user.diary == nil %>

    <div id="nav_helper">
      <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'link_tabs'  %>
        <div class='link_tabs'><a href="/users/<%= current_user.id %>">My Profile</a></div>
      <%= link_to "About Quick Picks", about_path, class: 'link_tabs'  %>
      <% else %>
      <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'link_tabs'  %>
        <div class='link_tabs'><a href="/users/<%= current_user.id %>">My Profile</a></div>
      <%= link_to "About Quick Picks", about_path, class: 'link_tabs'  %>
      <%= link_to "My_Quick_Pix", diary_path(current_user.id), class: 'link_tabs'  %>
      <% end %>
    </div>
  </div>

  </body>






  	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
