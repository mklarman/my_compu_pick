<div id="hiddenForm">
	<%= render 'new' %>
</div>

<% if current_user %>
<div id="user_print_out">
	<div class='user_ticket', id="uTick1">LAST 3 DIGIT DRAW
	<% if @user.three_digit_draws.last %>
		<%= @user.three_digit_draws.last.pick_three %><br>
		<%= @user.three_digit_draws.last.created_at.in_time_zone("EST").strftime("%l:%M%P %b %d %Y") %>
	<% end %>
	</div>

	<div class='user_ticket', id="uTick2">LAST 4 DIGIT DRAW
	<% if @user.four_digit_draws.last %>
		<%= @user.four_digit_draws.last.pick_four %><br>
		<%= @user.four_digit_draws.last.created_at.in_time_zone("EST").strftime("%l:%M%P %b %d %Y") %>
	<% end %>

		
	</div>

	<div class='user_ticket', id="uTick3">LAST MEGA DRAW
	<% if @user.mega_draws.last %>
		
		<%= @user.mega_draws.last.mega_draw %><br>
		<%= @user.mega_draws.last.created_at.in_time_zone("EST").strftime("%l:%M%P %b %d %Y") %>
	<% end %>
	</div>
</div>

<div id="button_container2">
	<input id="pick3" type="submit" value="Draw Pick 3">
	<input id="pick4" type="submit" value="Draw Pick 4">
	<input id="mTick" type="submit" value="Draw Mega Lott.">
</div>


<div id='three_digit'></div>
<div id='four_digit'></div>
<div id='mega'></div>

<div id = "freq_container">
	<div id='freq_label'>% CHANCE EACH DIGIT APPEARS IN YOUR QUICK PIX</div>
	<div class="num_label" id="zeros"></div>
	<div class="num_label" id="ones"></div>
	<div class="num_label" id="twos"></div>
	<div class="num_label" id="threes"></div>
	<div class="num_label" id="fours"></div>
	<div class="num_label" id="fives"></div>
	<div class="num_label" id="sixes"></div>
	<div class="num_label" id ="sevens"></div>
	<div class="num_label" id="eights"></div>
	<div class="num_label" id="nines"></div>
</div>




<div id="lastCont">
	<div id="users_three">LAST TEN 3 DIGIT DRAWS
	<% if @user.three_digit_draws %>
		<% @user.three_digit_draws.last(10).uniq.reverse.each do |t| %>
			<div class="last_ten"><%= t.pick_three %><br></div>
			<div><%#= t.created_at %></div>
		<% end %>
	<% end %>
	</div>

	<div id="users_four">LAST TEN 4 DIGIT DRAWS
	<% if @user.four_digit_draws %>
		<% @user.four_digit_draws.last(10).uniq.reverse.each do |t| %>
			<div class='last_ten'><%= t.pick_four %></div>
		<% end %>
	<% end %>
	</div>

	<div id="users_mega">LAST TEN MEGA DRAWS
	<% if @user.mega_draws %>
		<% @user.mega_draws.last(10).uniq.reverse.each do |t| %>
			<div class='last_ten'><%= t.mega_draw %></div>
		<% end %>
	<% end %>
	</div>
</div>




</div>

<%= render 'edit' %>
<% end %>

		 






<script src="/assets/diary_show.js"></script>


