	<% if !current_user.diary %>
		<%= link_to "Enter Numbers", new_diary_path %>
		<% else %>
		<%= render 'edit' %>
	<% end %>
</div>



<div class='draw_totals'>Three Digit Draws:
	<%= @user.three_digit_draws.count %>
</div>

<div class='draw_totals'>Four Digit Draws:
	<%= @user.four_digit_draws.count %>
</div>

<div class='draw_totals'>Mega Draws:
	<%= @user.mega_draws.count %>
</div>

